# Multi-stage Dockerfile for Python web application
# Using alpine for minimal image size

# Build stage
FROM python:3.11-alpine AS build
WORKDIR /src
COPY app/requirements.txt .
RUN pip install --no-cache-dir --user -r requirements.txt

# Runtime stage
FROM python:3.11-alpine
WORKDIR /app

# Create non-root user for security (before copying files)
RUN addgroup -g 1000 appuser && \
    adduser -D -u 1000 -G appuser appuser

# Copy Python dependencies from build stage to appuser's home
COPY --from=build --chown=appuser:appuser /root/.local /home/appuser/.local

# Copy application code
COPY --chown=appuser:appuser app/app.py .

# Switch to non-root user
USER appuser

# Expose application port
EXPOSE 8080

# Set Python path to include user-installed packages
ENV PATH=/home/appuser/.local/bin:$PATH

# Run the application
CMD ["python3", "app.py"]
